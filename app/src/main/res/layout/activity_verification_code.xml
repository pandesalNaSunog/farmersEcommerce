<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerificationCode"
    android:background="@color/green">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="90sp"
            android:paddingTop="70sp"
            android:paddingRight="90sp"
            android:paddingBottom="30sp"
            android:text="Enter the verification code that we have sent to your number"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/expiration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:text="Expires in 200s"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:letterSpacing="1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/resendLayout"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Did not receive code?"
                android:textColor="@color/white"/>
            <android.widget.Button
                android:id="@+id/resend"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:text="Click Here"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@drawable/dark_green_button"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                tools:ignore="SmallSp" />
        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="20sp"
        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <android.widget.Button
                android:layout_margin="5dp"
                android:id="@+id/one"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:background="@drawable/dark_green_button"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <android.widget.Button
                android:layout_margin="5dp"
                android:id="@+id/two"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:background="@drawable/dark_green_button"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <android.widget.Button
                android:layout_margin="5dp"
                android:id="@+id/three"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:background="@drawable/dark_green_button"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <android.widget.Button
                android:layout_margin="5dp"
                android:id="@+id/four"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:background="@drawable/dark_green_button"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <android.widget.Button
                android:layout_margin="5dp"
                android:id="@+id/five"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:background="@drawable/dark_green_button"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <android.widget.Button
                android:layout_margin="5dp"
                android:id="@+id/six"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:background="@drawable/dark_green_button"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <android.widget.Button
                android:layout_margin="5dp"
                android:id="@+id/seven"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:background="@drawable/dark_green_button"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <android.widget.Button
                android:layout_margin="5dp"
                android:id="@+id/eight"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:background="@drawable/dark_green_button"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <android.widget.Button
                android:layout_margin="5dp"
                android:id="@+id/nine"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:background="@drawable/dark_green_button"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

        </GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <android.widget.Button
            android:layout_margin="5dp"
            android:id="@+id/zero"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:background="@drawable/dark_green_button"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <android.widget.Button
            android:layout_margin="5dp"
            android:id="@+id/backspace"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:background="@drawable/dark_green_button"
            android:drawableEnd="@drawable/ic_baseline_backspace_24"
            android:padding="19sp"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>